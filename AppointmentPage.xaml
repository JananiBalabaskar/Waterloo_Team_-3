<Page x:Class="Digident_Group3.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Digident_Group3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppointmentPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/dental (6).png"/>
        </Grid.Background>
        
        <ListView Name="AppointmentsListView" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding AppointmentID}" Width="50"/>
                    <GridViewColumn Header="Patient Name" DisplayMemberBinding="{Binding PatientName}" Width="150"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding AppointmentDate}" Width="100"/>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding AppointmentTime}" Width="100"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding AppointmentType}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
