<Page x:Class="Digident_Group3.Contactus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Digident_Group3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Contactus">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/dental (6).png"/>
        </Grid.Background>


        <Grid Margin="20,10,20,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TextBlock Text="Contact Us" Grid.Row="0" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,10"/>


            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10"/>


            <StackPanel Grid.Row="3" Margin="0,10"/>
            <TextBox x:Name="MessageTextBox" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100" Margin="26,155,364,-255" Grid.Row="5"/>
            <TextBlock Text="Message:" Margin="26,134,640,-150" Grid.Row="5"/>
            <TextBox x:Name="EmailTextBox" Margin="96,111,364,-129" Grid.Row="5"/>
            <TextBlock Text="Email:" Margin="29,107,687,-123" Grid.Row="5"/>
            <TextBox x:Name="EmailTextBox_Copy" Margin="96,77,364,-93" Grid.Row="5"/>
            <TextBlock Text="Name:" Margin="29,77,687,-93" Grid.Row="5"/>
            <TextBlock Text="Contact Us" Grid.Row="0" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,10,0,10"/>
            <TextBlock Grid.Row="5" HorizontalAlignment="Left" FontSize="14" FontWeight="Bold" Margin="10,50,0,-70"><Run Language="en-in" Text="Feedback Form"/></TextBlock>
            <TextBlock Grid.Row="1" HorizontalAlignment="Left" FontSize="14" FontWeight="Bold" Margin="10,0,0,20" Grid.RowSpan="2" Text="For Appointments and Information"/>
            <TextBlock Margin="465,0,44,-267" Grid.Row="5"><Run Text=" "/><Run Text="307, king street,"/><Run Text=" "/><Run Text="second "/><Run Text="Floor, "/><Run Text="Waterloo, "/><LineBreak/><Run/><LineBreak/><Run Text="Ontario."/><LineBreak/><Run/><LineBreak/><Run Text="The hospital is located in "/><Run Text="North"/><Run Text=" of t"/><Run Text="he"/><LineBreak/><Run Text=" King Street"/><Run Text=" on road near the "/><Run Text="complex."/><LineBreak/><Run/><LineBreak/><Run Text="Landmark :"/><LineBreak/><Run Text="Located very close to "/><Run Text="Neighbours"/><Run Text=" "/><Run Text="Market"/><Run Text="."/><LineBreak/><Run/><LineBreak/><Run Text="For accurate directions"/><LineBreak/><Run/><Run Text=" Please"/><Run Text=" call the hospital directly at "/><LineBreak/><Run Text="+1 "/><Run Text="(34"/><Run Text="0"/><Run Text=")"/><Run Text=" 849 2277."/><LineBreak/><Run/><LineBreak/><Run Text="Note: "/><Run Text="Check"/><Run Text=" google maps directions."/></TextBlock>
            <TextBlock Grid.Row="2" HorizontalAlignment="Left" FontSize="14" FontWeight="Bold" Margin="465,5,0,15" Grid.RowSpan="2"><Run Language="en-in" Text="Clinic Location:"/></TextBlock>
            <TextBlock Margin="26,10,350,-15" Grid.Row="2" Grid.RowSpan="4"><Run Text="Hospital Front Desk : "/><Run Language="en-in" Text="+1 ("/><Run Text="234"/><Run Language="en-in" Text=")"/><Run Text="-764-8643"/><LineBreak/><Run/><LineBreak/><Run Text="Medical Doctor : "/><Run Language="en-in" Text="+1"/><Run Text=" "/><Run Language="en-in" Text="("/><Run Text="887"/><Run Language="en-in" Text=")"/><Run Text=" 624 1398 (Doctor Hotline for urgent queries)"/></TextBlock>
            <Button Content="Home" HorizontalAlignment="Left" Height="22" Margin="656,0,0,0"  VerticalAlignment="Center" Width="94" Click="Homebutton" BorderBrush="#FF8ADAED" Foreground="White"  Padding="2,2,2,2" FontSize="10">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF8ADAED"/>
                        <GradientStop Color="#FF1A73BD" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <Button Content="Submit" HorizontalAlignment="Left" Height="22" Margin="200,398,0,0"  VerticalAlignment="Top" Width="94" Click="SubmitButton_Click" BorderBrush="#FF8ADAED" Foreground="White"  Padding="2,2,2,2" FontSize="10">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8ADAED"/>
                    <GradientStop Color="#FF1A73BD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>
